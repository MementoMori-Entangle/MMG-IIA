<Window x:Class="MMG_IIA.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMG_IIA"
        mc:Ignorable="d"
        Title="ImageWindow" Height="450" Width="800"
        SizeChanged="Window_SizeChanged">
    <Grid>
        <Image Source="{Binding Img}" HorizontalAlignment="Left" Height="{Binding ImgHeight}" Width="{Binding ImgWidth}" VerticalAlignment="Top"/>
    </Grid>
</Window>
